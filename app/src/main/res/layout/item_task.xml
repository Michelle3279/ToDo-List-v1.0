<?xml version="1.0" encoding="utf-8"?>
<layout>
  <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/activity_half_vertical_margin"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="@dimen/_6sdp"
      app:cardElevation="@dimen/_6sdp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_half_vertical_margin"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="@dimen/activity_half_vertical_margin"
          >

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title!"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tvTaskDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Description..."
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/md_green_400"
            android:gravity="center"
            android:text="Active"
            android:padding="2dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@color/md_cyan_600"
            android:gravity="center"
            android:text="Edit"
            android:padding="2dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/white"
            />
      </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</layout>